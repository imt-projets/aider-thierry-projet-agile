{
  "compilerOptions": {
      "baseUrl": ".",
      "resolveJsonModule": true,
      "target": "ESNext",
      "strict": true,
      "outDir": "dist",
      "module": "CommonJS",
      "declaration": true,
      "experimentalDecorators": true,
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "types": ["jest", "node", "fastify"],
      "typeRoots": ["./src/interfaces/modules", "node_modules/@types"],
      "paths": {
        "@/*": ["src/*"]
      }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/", "dist/"]
}